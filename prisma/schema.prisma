generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model users {
  id String @id @default(cuid())
  email String @unique
  password String
  name String
  role String
  security_answer String
  area areas[]
  fatigue fatigues[]
}

model areas {
  id String @id @default(cuid())
  name String
  capacity Int
  user_id String
  crowd crowds[]
  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model crowds {
  id String @id @default(cuid())
  count Int
  createdAt DateTime @db.Timestamp
  status String
  area_id String
  area areas @relation(fields: [area_id], references: [id], onDelete: Cascade)
}

model fatigues {
  id String @id @default(cuid())
  status String
  createdAt DateTime @db.Timestamp
  user_id String
  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)
}